# Flask configuration
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]

{% if use_database %}
# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/{{ project_name | replace('-', '_') }}
{% endif %}

{% if use_oidc %}
# OIDC Authentication
BASEURL=http://localhost:3000
OIDC_ENABLED=false
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
{% endif %}

{% if use_s3 %}
# S3 Storage
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=admin
S3_SECRET_ACCESS_KEY=password
S3_BUCKET_NAME={{ project_name }}-attachments
{% endif %}

{% if use_sse %}
# SSE Gateway
SSE_GATEWAY_URL=http://localhost:3001
SSE_CALLBACK_SECRET=
FRONTEND_VERSION_URL=http://localhost:3000/version.json
{% endif %}

# Shutdown
DRAIN_AUTH_KEY=
GRACEFUL_SHUTDOWN_TIMEOUT=600
