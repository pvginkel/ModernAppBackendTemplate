# Flask settings
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=5000

# CORS settings (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000"]

# Graceful shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Metrics
METRICS_UPDATE_INTERVAL=60

# Task settings
TASK_MAX_WORKERS=4
TASK_TIMEOUT_SECONDS=300
TASK_CLEANUP_INTERVAL_SECONDS=600
# Database settings
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/test_app

# Connection pool settings
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
# SSE Gateway settings
SSE_GATEWAY_URL=http://localhost:3001
SSE_CALLBACK_SECRET=  # Required in production
# S3/Ceph storage settings
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=admin
S3_SECRET_ACCESS_KEY=password
S3_BUCKET_NAME=test_app_files
S3_REGION=us-east-1
S3_USE_SSL=false
# OIDC Authentication settings
OIDC_ENABLED=false
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_SCOPES=openid profile email
OIDC_AUDIENCE=
OIDC_CLOCK_SKEW_SECONDS=30
OIDC_COOKIE_NAME=access_token
